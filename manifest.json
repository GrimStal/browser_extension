{
  "manifest_version": 2,
  "name": "CARGO",
  "version": "1.1.2",
  "version_name": "1.1.2",

  "description": "Расширение \"CARGO\" позволяет одновременно добавлять Ваши грузы на транспортные биржи Cargo.LT и Lardi-Trans.com",
  "icons": {
    "16": "css/images/icons/16x16.png",
    "32": "css/images/icons/32x32.png",
    "48": "css/images/icons/48x48.png",
    "64": "css/images/icons/64x64.png",
    "96": "css/images/icons/96x96.png",
    "128": "css/images/icons/128x128.png"
  },

  "browser_action": {
    "default_icon": "css/images/icons/16x16.png",
    "default_popup": "popup.html",
    "default_title": "Добавить груз"
  },

  "background": {
    "scripts": [
      "src/xml2json.min.js",
      "SM.js",
      "src/jquery/dist/jquery.min.js",
      "src/jquery.ba-jqmq.min.js",
      "background.js"
    ]
  },

  "permissions": [
    "tabs",
    "https://io.cargo.lt/*",
    "http://api.lardi-trans.com/*",
    "https://restcountries.eu/*"
  ],

  "offline_enabled": false,

  "author": "Borshchov Dimitriy"
}
