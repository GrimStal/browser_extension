{
  "manifest_version": 2,
  "name": "CARGO",
  "version": "1.0.2",
  "version_name": "1.0.2",

  "description": "Расширение \"CARGO\" позволяет одновременно добавлять Ваши грузы на транспортные биржи Cargo.LT и Lardi-Trans.com",
  "icons": {
    "16": "images/icons/16x16.png",
    "32": "images/icons/32x32.png",
    "48": "images/icons/48x48.png",
    "64": "images/icons/64x64.png",
    "96": "images/icons/96x96.png",
    "128": "images/icons/128x128.png"
  },

  "browser_action": {
    "default_icon": "images/icons/16x16.png",
    "default_popup": "popup.html",
    "default_title": "Добавить груз"
  },

  "background": {
    "scripts": [
      "bower_components/abdmob/x2js/xml2json.min.js",
      "background.js",
      "bower_components/jquery/dist/jquery.min.js"

    ]
  },

  "permissions": [
    "tabs",
    "https://io.cargo.lt/*",
    "http://api.lardi-trans.com/*",
    "https://restcountries.eu/*"
  ],

  "offline_enabled": false,

  "author": "Borshchov Dimitriy"
}
